<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HenCoderTabTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="CustomToast" parent="@android:style/Animation.Toast">
        <item name="android:windowEnterAnimation">@anim/custom_toast_enter</item>
        <item name="android:windowExitAnimation">@anim/custom_toast_exit</item>
    </style>

</resources>
